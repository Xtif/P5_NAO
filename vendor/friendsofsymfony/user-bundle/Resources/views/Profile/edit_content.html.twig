{% trans_default_domain 'FOSUserBundle' %}

<div class="col-lg-11">
	{{ form_start(
		form, {
			'action': path('fos_user_profile_edit'), 
			'attr': {'class': 'fos_user_profile_edit'}
		}) 
	}}

	{{ form_errors(form) }}

	<div class="col-lg-4 m-auto">
			<img src="{{ asset(user.picture) }}" style="width: 100%;" alt="photo_utilisateur" />
	</div>
	
	<div class="form-group m-auto">
		{{ form_row(form.picture, {'attr': {
			'empty_data': 'Avatar_utilisateur_carre.jpeg'}}) }}
	</div>

	<div class="form-group">
		{{ form_row(form.username) }}
	</div>

	<div class="form-group">
		{{ form_row(form.lastname) }}
	</div>

	<div class="form-group">
		{{ form_row(form.firstname) }}
	</div>

	<div class="form-group">
		{{ form_row(form.adress) }}
	</div>

	<div class="form-group">
		{{ form_row(form.postalCode) }}
	</div>

	<div class="form-group">
		{{ form_row(form.city) }}
	</div>

	<div class="form-group">
		{{ form_row(form.phone) }}
	</div>

	<div class="form-group">
		{{ form_row(form.email) }}
	</div>

	<div class="form-group">
		{{ form_row(form.current_password) }}
	</div>

	<div class="form-group row mt-4">
	  <div class="m-auto">
	    <input type="submit" class="main-button" value="Valider les modifications" />
	  </div>
	</div>

</div>

{{ form_end(form) }}